@model NIMAP_INFOTECH.Models.Product
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add New Product</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="ProductName"></label>
                           <input type="text" asp-for="ProductName" class="form-control" placeholder="Enter Product Name" />
                           <span asp-validation-for="ProductName" class="text-danger"></span>
                            
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId"></label>
                            <input type="text" asp-for="CategoryId" class="form-control" placeholder="Enter Category Id" />
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryName"></label>
                            <input type="text" asp-for="CategoryName" class="form-control" placeholder="Enter Category Name" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success float-right"
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>